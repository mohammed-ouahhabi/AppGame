{% extends 'base.html.twig' %}

{% block title %}Edit User{% endblock %}

{% block body %}
    <div class="container mt-4">
        <h1 class="text-center mb-4 text-uppercase">Edit User</h1>

        {{ form_start(form) }}
        {{ form_errors(form) }}
        <div class="mb-3">
            {{ form_row(form.email, {'attr': {'class': 'form-control'}}) }}
        </div>
        <div class="mb-3">
            {{ form_row(form.password, {'attr': {'class': 'form-control'}}) }}
        </div>
        <div class="mb-3">
            {{ form_row(form.roles, {'attr': {'class': 'form-control'}}) }}
        </div>
        <button type="submit" class="btn btn-primary">Save</button>
        {{ form_end(form) }}

        <a href="{{ path('app_user_index') }}" class="btn btn-secondary mt-3">Back to list</a>
    </div>

    <style>
        .btn-primary, .btn-secondary {
            transition: background-color 0.3s ease, border-color 0.3s ease;
        }

        .btn-primary:hover {
            background-color: #0056b3;
            border-color: #004085;
        }

        .btn-secondary:hover {
            background-color: #6c757d;
            border-color: #545b62;
        }
    </style>
{% endblock %}
