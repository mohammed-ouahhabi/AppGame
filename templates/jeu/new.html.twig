{% extends 'base.html.twig' %}

{% block title %}Ajouter une nouvelle offre{% endblock %}

{% block body %}
    <div class="container mt-4">
        <h1 class="text-center mb-4">Ajouter une nouvelle offre</h1>
        <div class="card p-4 bg-dark text-white">
            {{ form_start(form) }}
            <div class="mb-3">
                {{ form_row(form.nom, {
                    label: 'Nom du jeu',
                    attr: {'class': 'form-control'}
                }) }}
            </div>
            <div class="mb-3">
                {{ form_row(form.dateSortie, {
                    label: 'Date de sortie',
                    attr: {'class': 'form-control'}
                }) }}
            </div>
            <div class="mb-3">
                {{ form_row(form.developpeur, {
                    label: 'Développeur',
                    attr: {'class': 'form-control'}
                }) }}
            </div>
            <div class="mb-3">
                {{ form_row(form.editeur, {
                    label: 'Éditeur',
                    attr: {'class': 'form-control'}
                }) }}
            </div>
            <div class="text-center">
                <button type="submit" class="btn btn-primary"><i class="fas fa-save"></i> Ajouter</button>
                <a href="{{ path('home_index') }}" class="btn btn-secondary"><i class="fas fa-arrow-left"></i> Retour à la liste</a>
            </div>
            {{ form_end(form) }}
        </div>
    </div>
{% endblock %}
