<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8">
    <title>{% block title %}Welcome!{% endblock %}</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.1/css/all.min.css">
    <link href="https://fonts.googleapis.com/css2?family=Orbitron:wght@400;700&display=swap" rel="stylesheet">
    <style>
        body {
            background: url('/images/photo.webp') no-repeat center center fixed;
            background-size: cover;
            color: white;
            font-family: 'Orbitron', sans-serif;
        }

        .filter-container {
            background: rgba(0, 0, 0, 0.9);
            padding: 2rem;
            border-radius: 10px;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.3);
        }

        .filter-button, .add-offre-button, .btn-info, .btn-primary, .btn-danger {
            transition: background-color 0.3s ease, border-color 0.3s ease, transform 0.3s;
        }

        .filter-button:hover, .add-offre-button:hover, .btn-info:hover, .btn-primary:hover, .btn-danger:hover {
            transform: scale(1.05);
        }

        .offer-card {
            transition: transform 0.3s, box-shadow 0.3s;
            border-radius: 15px;
            background: rgba(0, 0, 0, 0.8);
            border: 1px solid #555;
        }

        .offer-card:hover {
            transform: translateY(-10px);
            box-shadow: 0 10px 20px rgba(0, 0, 0, 0.5);
        }

        .card-title {
            font-size: 1.75rem;
            color: #ffeb3b;
        }

        .card-text {
            color: #cddc39;
        }

        h1 {
            color: #ffeb3b;
            text-shadow: 2px 2px 4px #000;
        }
        .bg-dark {
            background-color: rgba(0, 0, 0, 0.8) !important;
        }
        .bg-secondary {
            background-color: rgba(255, 255, 255, 0.1) !important;
        }
        .text-white {
            color: #fff !important;
        }

        .form-control {
            background-color: rgba(255, 255, 255, 0.1) !important;
            color: #fff !important;

            border: none;
            color: white;
            border-radius: 5px;
        }

        .form-control:focus {
            background: rgba(0, 0, 0, 0.8);
            border: none;
            color: white;
            box-shadow: 0 0 5px #ffeb3b;
        }
        .form-control option {
            color : black;
        }
        .form-login{
            display:flex;
            flex-direction : column;
            gap: 10px
        }
        .form-login > button{
            width : 75px
        }
    </style>
    {% block stylesheets %}{% endblock %}
</head>
<body>
<nav class="navbar navbar-expand-lg navbar-dark bg-dark">
    <a class="navbar-brand" href="{{ path('home_index') }}">Gaming Platform</a>
    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
    </button>
   <div class="collapse navbar-collapse" id="navbarNav">
        <ul class="navbar-nav ml-auto">
            <li class="nav-item">
                <a class="nav-link" href="{{ path('home_index') }}">Jeux</a>
            </li>
            <li class="nav-item">
                <a class="nav-link" href="{{ path('offres_index') }}">Offres</a>
            </li>
            
            {% if is_granted('ROLE_ADMIN') %}
                <li class="nav-item">
                    <a class="nav-link" href="{{ path('app_user_index') }}">User</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="{{ path('editeur_index') }}">Éditeur</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="{{ path('developpeur_index') }}">Développeur</a>
                </li>
            {% endif %}
            {% if app.user %}
                <li class="nav-item">
                    <a class="nav-link" href="{{path('wishlist_index')}}">WishList</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="{{ path('app_logout') }}">Logout</a>
                </li>
            {% else %}
                <li class="nav-item">
                    <a class="nav-link" href="{{ path('app_login') }}">Login</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="{{ path('app_register') }}">Register</a>
                </li>
            {% endif %}
            
        </ul>
    </div>
</nav>


{% block body %}{% endblock %}

<script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.5.3/dist/umd/popper.min.js"></script>
<script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
{% block javascripts %}{% endblock %}
</body>
</html>
