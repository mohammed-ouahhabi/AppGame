{# templates/developpeur/new.html.twig #}
{% extends 'base.html.twig' %}

{% block title %}Ajouter un nouveau développeur{% endblock %}

{% block body %}
    <div class="container mt-4">
        <h1 class="text-center mb-4">Ajouter un nouveau développeur</h1>
        <div class="card p-4 bg-dark text-white">
            {{ form_start(form) }}
            <div class="form-group">
                {{ form_label(form.nom) }}
                {{ form_widget(form.nom, {'attr': {'class': 'form-control'}}) }}
            </div>
            <button type="submit" class="btn btn-primary mt-3"><i class="fas fa-save"></i> Ajouter</button>
            {{ form_end(form) }}
        </div>
    </div>
{% endblock %}
